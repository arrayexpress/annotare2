<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:RootLayoutPanel width="100%" height="100%">
        <g:layer left="20px" right="20px" top="20px" bottom="20px">
            <g:DockLayoutPanel>
                <g:north size="40">
                    <g:HorizontalPanel ui:field="toolBar" width="100%">
                        <g:HTML><button id="upload-button">Upload</button></g:HTML>
                    </g:HorizontalPanel>
                </g:north>
                <g:center>
                    <g:HTMLPanel>
                        <div style="width:100px;height:100px;background-color:skyblue;text-align:center;vertical-align:middle" id="upload-drop">Drop zone</div>
                        <g:Label ui:field="text"/>
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:layer>
    </g:RootLayoutPanel>
</ui:UiBinder>