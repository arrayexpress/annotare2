<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:RootLayoutPanel width="100%" height="100%">
        <g:layer left="20px" right="20px" top="20px" bottom="20px">
            <g:DockLayoutPanel>
                <g:north size="40">
                    <g:HorizontalPanel ui:field="toolBar" width="100%">
                        <g:SuggestBox ui:field="suggestBox" width="100%"/>
                    </g:HorizontalPanel>
                </g:north>
                <g:center>
                    <c:DataGrid ui:field='dataGrid' width="100%" height="100%" />
                </g:center>
            </g:DockLayoutPanel>
        </g:layer>
    </g:RootLayoutPanel>
</ui:UiBinder>