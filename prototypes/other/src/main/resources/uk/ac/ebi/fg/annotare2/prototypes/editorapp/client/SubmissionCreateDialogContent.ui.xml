<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:HTMLPanel>
        <table width="400px">
            <tr>
                <td>Experiment Design:</td>
                <td>
                    <g:ListBox ui:field="designBox" width="100%"/>
                </td>
            </tr>
            <tr>
                <td>Species:</td>
                <td>
                    <g:ListBox ui:field="speciesBox" width="100%"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:ListBox ui:field="templateBox" visibleItemCount="10" width="100%"/>
                </td>
            </tr>
            <tr>
                <td align="right" colspan="2">
                    <g:Button ui:field="cancelButton">Cancel</g:Button>
                    <g:Button ui:field="noneButton">Select None</g:Button>
                    <g:Button ui:field="okButton">Ok</g:Button>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>