<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
        >

    <ui:style>
        .form {
            margin: 5px;
        }

        .form td {
            padding-bottom: 10px;
        }

        .form td.title {
            width: 140px;
            text-align: right;
            padding-right: 10px;
        }
    </ui:style>

    <g:ScrollPanel height="100%">
        <g:HTMLPanel>
            <table width="98%" class="{style.form}">
                <tbody>
                    <tr>
                        <td class="{style.title}">
                            Title
                        </td>
                        <td>
                            <g:TextArea width="90%" visibleLines="2"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Description
                        </td>
                        <td>
                            <g:TextArea width="90%" visibleLines="4"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Date of Experiment
                        </td>
                        <td>
                            <dp:DateBox/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Date of Public Release
                        </td>
                        <td>
                            <dp:DateBox/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>