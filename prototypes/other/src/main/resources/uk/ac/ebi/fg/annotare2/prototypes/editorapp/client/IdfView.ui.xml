<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:wgt="urn:import:uk.ac.ebi.fg.annotare2.prototypes.editorapp.client">

    <ui:style>
        .idfContentPane{
            border-left: 1px solid blue;
            padding-top: 15px;
            padding-left: 15px;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="60">
            <g:HTML>
                <div style="border:1px solid red; height:97%">IDF Header: idf contents stats, import/export buttons, view mode switch</div>
            </g:HTML>
        </g:north>
        <g:west size="160">
            <g:FlowPanel>
                <wgt:MenuItem text="General Information"/>
                <wgt:MenuItem text="Contacts"/>
                <wgt:MenuItem text="Publications"/>
                <wgt:MenuItem text="Term Definition Sources"/>
                <wgt:MenuItem text="Experimental Designs"/>
                <wgt:MenuItem text="Experimental Factors"/>
                <wgt:MenuItem text="Quality Controls"/>
                <wgt:MenuItem text="Protocols"/>
                <wgt:MenuItem text="Replicates"/>
                <wgt:MenuItem text="Normalizations"/>
                <wgt:MenuItem text="Comments"/>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel addStyleNames="{style.idfContentPane}">
               <wgt:ContactListView/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
