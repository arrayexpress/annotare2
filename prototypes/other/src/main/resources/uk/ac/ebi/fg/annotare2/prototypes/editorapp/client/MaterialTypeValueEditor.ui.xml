<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
        <table>
            <tr>
                <td>
                    Name:
                </td>
                <td colspan="2">
                    <g:TextBox ui:field="nameBox" width="100%"/>
                </td>
            </tr>
            <tr>
                <td>
                    Value:
                </td>
                <td>
                    <g:TextBox ui:field="valueBox" width="200px"/>
                </td>
                <td>
                    <g:ListBox ui:field="sourceList" width="150px"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>