<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:my="urn:import:uk.ac.ebi.fg.annotare2.prototypes.editorapp.client">

    <ui:style>
        .idfContentPane {
            border-left: 1px solid blue;
            padding-top: 15px;
            padding-left: 15px;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:west size="200">
            <g:FlowPanel>
                <my:MenuItem text="General Information"/>
                <my:MenuItem text="Contacts"/>
                <my:MenuItem text="Publications"/>
                <my:MenuItem text="Term Definition Sources"/>
                <my:MenuItem text="Experimental Designs"/>
                <my:MenuItem text="Experimental Factors"/>
                <my:MenuItem text="Quality Controls"/>
                <my:MenuItem text="Protocols"/>
                <my:MenuItem text="Replicates"/>
                <my:MenuItem text="Normalizations"/>
                <my:MenuItem text="Comments"/>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel addStyleNames="{style.idfContentPane}">
                <my:ContactListView/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>