<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
        <table>
            <tr>
                <td width="300px">
                    <g:ListBox ui:field="columnList" width="100%"/>
                    <g:ListBox ui:field="valueList" width="100%" visibleItemCount="10"/>
                    <table>
                        <tr>
                            <td>
                                <g:Button ui:field="addButton">+</g:Button>
                            </td>
                            <td>
                                <g:Button ui:field="removeButton">-</g:Button>
                            </td>
                        </tr>
                    </table>
                </td>
                <td valign="top" style="padding:5px 10px;border:1px solid #eee">
                    <g:SimplePanel ui:field="panel"/>
                    <table width="100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="saveButton">save</g:Button>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td align="right" colspan="2">
                    <g:Button ui:field="cancelButton">Cancel</g:Button>
                    <g:Button ui:field="okButton">Ok</g:Button>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>