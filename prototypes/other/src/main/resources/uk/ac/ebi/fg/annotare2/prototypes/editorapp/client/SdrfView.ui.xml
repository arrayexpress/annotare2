<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:style>
        .clearAll {
            height: 97%;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="18">
            <g:HTMLPanel addStyleNames="{style.clearAll}">
                <div style="height:15px;text-align:right;">
                    <a href="#">Clear All</a>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:TabLayoutPanel ui:field="tabPanel" barHeight="35"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>