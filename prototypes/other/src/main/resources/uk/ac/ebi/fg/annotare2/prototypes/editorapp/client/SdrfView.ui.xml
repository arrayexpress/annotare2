<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:style>
        .contentPane{
            border-left: 1px solid blue;
            padding-top: 15px;
            padding-left: 15px;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="60">
            <g:HTML>
                <div style="border:1px solid red; height:97%">TBA</div>
            </g:HTML>
        </g:north>
        <g:west size="160">
            <g:HTML>
                TBA
            </g:HTML>
        </g:west>
        <g:center>
            <g:ScrollPanel addStyleNames="{style.contentPane}">
                <g:HTML>TBA</g:HTML>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>