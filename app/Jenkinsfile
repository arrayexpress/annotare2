pipeline {
    options {
        copyArtifactPermission('Annotare_create_release');
    }
    agent any
    tools {
        maven 'maven-3.8.5'
        jdk 'jdk-8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                    echo "JAVA_HOME = ${JAVA_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps{
                   configFileProvider([configFile(fileId: 'annotare_wwwdev_maven_settings', variable: 'MAVEN_SETTINGS_XML')]) {
                        sh 'mvn -U --batch-mode -s $MAVEN_SETTINGS_XML -f app/pom.xml clean package'
                        archiveArtifacts artifacts: 'app/webapp/target/annotare2-web*.war', fingerprint: true
                    }
                }
        }

        post {
           success {
               input {
                   message "Create a release ?"
                   ok "Yes"
               }
               script {
                   build job: 'my-downstream-project',
                         parameters: [string(name: 'upstreamJobName', value: env.BRANCH_NAME)]
               }
           }
        }
    }
}