        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <webappDirectory>${webappDirectory}</webappDirectory>
                    <webResources>
                        <resource>
                            <directory>${basedir}/src/main/webapp</directory>
                            <includes>
                                <include>META-INF/context.xml</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                    <!--packagingExcludes>**/client/**</packagingExcludes-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>generate-context-xml</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <defaults>
                                <contextTemplate>src/main/webapp/META-INF/context_template.xml</contextTemplate>
                            </defaults>
                            <source>
                                import groovy.text.SimpleTemplateEngine

                                def templateFiles = [
                                        new File(project.basedir, project.properties['contextTemplate'])
                                ]

                                def engine = new SimpleTemplateEngine()
                                def binding = [
                                                 'annotareProperties': project.properties['annotare.properties.path'],
                                                 'mageTabCheckProperties': project.properties['magetabcheck.properties.path'],
                                                 'contextPath': project.properties['annotare.contextPath'],
                                                 'dbUrl': project.properties['annotare.db.url'],
                                                 'dbDriver': project.properties['annotare.db.driver'],
                                                 'dbUser': project.properties['annotare.db.user'],
                                                 'dbPassword': project.properties['annotare.db.password'],
                                ]

                                for(file in templateFiles) {
                                    def template = engine.createTemplate(file).make(binding)
                                    def destination = file.name.replace("_template", "")
                                    def toFile = new File(file.parent, destination)
                                    toFile.write(template.toString())
                                }
                            </source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
