<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:my="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget">

    <ui:style>
        .padding {
            margin-left: 15px;
        }
        .grid {
            border-left: 1px solid #eeeeee;
            border-top: 1px solid #eeeeee;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.padding}">
        <g:north size="40">
            <g:FlowPanel width="100%">
                <g:HorizontalPanel spacing="3" ui:field="controlPanel">
                    <my:DataFilesUploadPanel ui:field="uploadPanel"/>
                    <g:Button text="FTP Upload..." ui:field="ftpUploadBtn"/>
                </g:HorizontalPanel>
                <g:FlowPanel width="100%" ui:field="statusPanel">
                </g:FlowPanel>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <my:DataFileListPanel ui:field="fileListPanel" addStyleNames="{style.grid}"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
