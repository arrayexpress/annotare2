<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:my="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget">

    <ui:style>
        .border {
            border: 1px solid #48877C;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="25">
            <my:EditorTopMenuBar/>
        </g:north>
        <g:north size="60">
            <g:SimpleLayoutPanel ui:field="titleBarDisplay"/>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel">
                <g:center>
                    <g:DockLayoutPanel>
                        <g:north size="75">
                            <g:DockLayoutPanel>
                                <g:north size="40">
                                    <g:SimpleLayoutPanel ui:field="tabBarDisplay" height="100%"/>
                                </g:north>
                                <g:center>
                                    <g:SimplePanel/>
                                </g:center>
                            </g:DockLayoutPanel>
                        </g:north>
                        <g:west size="0">
                            <my:MinimizableScrollPanel size="200" height="100%" ui:field="leftMenuDisplay"/>
                        </g:west>
                        <g:center>
                            <g:SplitLayoutPanel ui:field="verticalSplitPanel">
                                <g:center>
                                    <g:SimpleLayoutPanel height="100%" ui:field="contentDisplay"/>
                                </g:center>
                                <g:east size="20">
                                    <g:DockLayoutPanel ui:field="dockPanel">
                                        <g:east size="20">
                                            <g:SimpleLayoutPanel ui:field="dockBarDisplay"/>
                                        </g:east>
                                        <g:center>
                                            <g:SimpleLayoutPanel ui:field="dockBarPanelDisplay"/>
                                        </g:center>
                                    </g:DockLayoutPanel>
                                </g:east>
                            </g:SplitLayoutPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
                <g:south size="40">
                    <g:ScrollPanel ui:field="logBarDisplay" height="100%" addStyleNames="{style.border}"/>
                </g:south>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
