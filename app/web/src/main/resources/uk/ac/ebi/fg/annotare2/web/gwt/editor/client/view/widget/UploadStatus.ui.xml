<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:my="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget">

    <ui:style>
        .status {
            font-size: 10px;
            font-style: italic;
            font-family: Trebuchet MS, Tahoma, Verdana, Arial, SANS-SERIF;
            font-weight: normal;
            color: #999;
        }
    </ui:style>

    <g:HTMLPanel ui:field="panel">
        <table width="100%">
            <tr>
                <td width="16px"><g:Anchor ui:field="cancelIcon"><div class="wgt-cancelIcon">&nbsp;</div></g:Anchor></td>
                <td colspan="2"><g:Label ui:field="fileName"/></td>
            </tr>
            <tr>
                <td colspan="2"><my:ProgressBar ui:field="progressBar"/></td>
                <td width="50px"><g:Label ui:field="progressLabel"/></td>
            </tr>
            <tr>
                <td colspan="3"><g:Label ui:field="statusLabel" addStyleNames="{style.status}"/>&nbsp;</td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>
