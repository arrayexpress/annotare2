<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .otherLabel {
            cursor: pointer;
            text-decoration: underline;
            text-transform: lowercase;
            padding: 3px;
        }
        .otherLabel:hover {
            background-color: #eeeeee;
        }
    </ui:style>
    <g:ResizeLayoutPanel height="350px" width="600px">
        <g:DockLayoutPanel>
            <g:center>
                <g:DockLayoutPanel>
                    <g:east size="150">
                        <g:DockLayoutPanel>
                            <g:center>
                                <g:ListBox ui:field="predefinedAttributes" visibleItemCount="9" width="100%"/>
                            </g:center>
                            <g:south size="25">
                                <g:Label addStyleNames="{style.otherLabel}" ui:field="otherLabel">Other</g:Label>
                            </g:south>
                        </g:DockLayoutPanel>
                    </g:east>
                    <g:center>
                        <g:SplitLayoutPanel>
                            <g:center>
                                <g:DockLayoutPanel>
                                    <g:east size="40">
                                        <g:SimpleLayoutPanel>
                                            <g:HTMLPanel>
                                                <table style="width:100%;" cellspacing="1">
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="moveUpButton">
                                                                &#8593;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="moveDownButton">
                                                                &#8595;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="removeButton">
                                                                &gt;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="addButton">&lt;</g:Button>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </g:HTMLPanel>
                                        </g:SimpleLayoutPanel>
                                    </g:east>
                                    <g:center>
                                        <g:ListBox ui:field="currentAttributes" width="100%" visibleItemCount="9"/>
                                    </g:center>
                                </g:DockLayoutPanel>
                            </g:center>
                            <g:south size="110">
                                <g:SimpleLayoutPanel ui:field="attributeEditor"/>
                            </g:south>
                        </g:SplitLayoutPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">Ok</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>