<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .wgt-TabPanel {
            height: 100%;
            padding-top: 10px;
        }

        .wgt-TabPanel ul {
            padding: 3px 10px;
            margin: 0;
            font-size: 14px;
            font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
            border-bottom: 1px solid #48877c;;
            list-style-type: none;
            text-align: left; /*set to left, center, or right to align the menu as desired*/
        }

        .wgt-TabPanel li {
            display: inline;
            margin: 0;
        }

        .wgt-TabPanel li a {
            text-decoration: none;
            padding: 3px 15px;
            margin-right: 3px;
            border: 1px solid #48877c;
            border-bottom: none;
            background-color: #48877c;
            color: #fff;

            -webkit-border-radius: 3px 3px 0 0;
            -moz-border-radius: 3px 3px 0 0;
            -ms-border-radius: 3px 3px 0 0;
            -o-border-radius: 3px 3px 0 0;
            border-radius: 3px 3px 0 0;
        }

        .wgt-TabPanel li a:visited {
            color: white;
        }

        .wgt-TabPanel li a:hover {
            color: white;
        }

        .wgt-TabPanel li a:active {
            color: white;
        }

        .wgt-TabPanel li.selected a {
            /*selected tab effect*/
            position: relative;
            top: 1px;
            padding-top: 4px;
            background-color: white;
            color: #CB7935;
            font-weight: bolder;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.wgt-TabPanel}">
            <ul>
                <li>
                    <a href="#">IDF</a>
                </li>
                <li>
                    <a href="#">SDRF</a>
                </li>
                <li class="{style.selected}">
                    <a href="#">DATA</a>
                </li>
                <li>
                    <a href="#">ADF</a>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
