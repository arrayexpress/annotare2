<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .border {
            border-bottom: 1px solid #eeeeee;
        }

        .templateDetails {
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 15px;
            line-height: 160%;
        }
    </ui:style>
    <g:ResizeLayoutPanel height="300px" width="700px">
        <g:DockLayoutPanel>
            <g:center>
                <g:SplitLayoutPanel addStyleNames="{style.border}">
                    <g:west size="210">
                        <g:DockLayoutPanel>
                            <g:north size="20">
                                <g:Label>Submission type:</g:Label>
                            </g:north>
                            <g:center>
                                <g:ListBox ui:field="templateBox" visibleItemCount="10" width="100%" height="100%"/>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:west>
                    <g:center>
                        <g:ScrollPanel height="100%" ui:field="templateDetails" addStyleNames="{style.templateDetails}"/>
                    </g:center>
                </g:SplitLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">Ok</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>