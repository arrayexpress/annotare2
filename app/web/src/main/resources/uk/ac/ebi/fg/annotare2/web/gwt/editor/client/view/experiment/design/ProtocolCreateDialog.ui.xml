<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .tree {
            border: 1px solid grey;
        }

        .selection {
            padding-top: 10px;
        }
    </ui:style>
    <g:ResizeLayoutPanel height="500px" width="800px">
        <g:DockLayoutPanel>
            <g:center>
                <g:SplitLayoutPanel>
                    <g:center>
                        <g:DockLayoutPanel>
                            <g:north size="20">
                                <g:Label>Protocol Types:</g:Label>
                            </g:north>
                            <g:center>
                                <g:ScrollPanel addStyleNames="{style.tree}">
                                    <g:Tree ui:field="protocolTypeTree"/>
                                </g:ScrollPanel>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:center>
                    <g:east size="400">
                        <g:DockLayoutPanel>
                            <g:north size="20">
                                <g:Label>Protocols:</g:Label>
                            </g:north>
                            <g:north size="200">
                                <g:ListBox ui:field="protocolList" visibleItemCount="10" width="100%"/>
                            </g:north>
                            <g:center>
                                <g:ScrollPanel>
                                    <g:HTMLPanel addStyleNames="{style.selection}">
                                        <table>
                                            <tr>
                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td>
                                                                <span style="font-style:italic;color:#E5A066">Selected&nbsp;Type:</span>
                                                                &nbsp;
                                                            </td>
                                                            <td>
                                                                <g:Label ui:field="typeName"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <g:Label ui:field="typeDefinition"/>
                                                </td>
                                            </tr>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <span style="font-style:italic;color:#E5A066">Selected&nbsp;Protocol:</span>
                                                            &nbsp;
                                                        </td>
                                                        <td>
                                                            <g:Label ui:field="protocolName"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <tr>
                                                <td>
                                                    <g:Label ui:field="protocolDefinition"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:ScrollPanel>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:east>
                </g:SplitLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">Create</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>