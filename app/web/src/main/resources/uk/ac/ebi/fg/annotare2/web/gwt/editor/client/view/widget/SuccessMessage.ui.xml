<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .success {
            color: #4F8A10;
            background-color: #DFF2BF;
            border: 1px solid;
            padding: 5px 10px;
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.success}">
        <g:InlineLabel ui:field="label"/>&nbsp;
        <g:Anchor ui:field="hideLink">Hide</g:Anchor>
    </g:HTMLPanel>

</ui:UiBinder>