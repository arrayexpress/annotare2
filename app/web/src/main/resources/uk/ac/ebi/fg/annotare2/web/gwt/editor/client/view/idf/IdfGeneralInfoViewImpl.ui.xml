<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
        <div style="padding:5px">
            <div>Title:</div>
            <div>
                <g:TextArea width="99%" visibleLines="4" ui:field="title"></g:TextArea>
            </div>
            <div>Description:</div>
            <div>
                <g:TextArea width="99%" visibleLines="4" ui:field="description"></g:TextArea>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>

