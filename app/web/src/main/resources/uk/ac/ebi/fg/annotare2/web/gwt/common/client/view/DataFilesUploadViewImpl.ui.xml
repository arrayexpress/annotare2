<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.common.client.view">

    <ui:style>
        .grid {
            border-left: 1px solid #eeeeee;
            border-right: 1px solid #eeeeee;
            border-bottom: 1px solid #eeeeee;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="40">
            <g:HorizontalPanel spacing="3">
                <g:Button text="Upload Files..." ui:field="uploadBtn" />
                <g:Button text="FTP Upload..." enabled="false" ui:field="ftpUploadBtn"/>
                <g:Button text="Aspera Upload..." enabled="false" ui:field="asperaUploadBtn"/>
                <g:Button text="Delete Files" enabled="false" ui:field="deleteFilesBtn"/>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <c:DataFileListPanel ui:field="fileListPanel" addStyleNames="{style.grid}"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
