<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .editorHeader {
        }

        .editorHeader h1 {
            margin: 0;
            padding: 3px 5px;
            font-size: 23px;
            font-weight: normal;
        }

        .globalSuccessMessage {
            position: relative;
            bottom: -1px;
            left: 0;
            background-color: #60e462;
            padding: 2px 5px;
        }
    </ui:style>

    <g:HTMLPanel height="100%">
        <div class="{style.editorHeader}">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <h1>E-MEXP-12345</h1>
                    </td>
                    <td width="200px" style="text-align:right">
                        <g:Button>Save</g:Button>
                        <g:Button>Validate</g:Button>
                    </td>
                </tr>
            </table>
        </div>
        <div class="{style.globalSuccessMessage}">
            Validation successful.
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
