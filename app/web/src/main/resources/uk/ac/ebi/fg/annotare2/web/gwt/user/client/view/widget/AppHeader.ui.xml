<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .logo {
            padding:0;
            font-family: 'Arial Unicode MS', Arial, sans-serif;
        }

        .logo h1.title {
            font-size: 23px;
            font-weight: normal;
            margin: 5px 0;
            padding: 0;
        }

        .logo div {
            color: #787878;
            font-size: 12px;
            margin: 0;
            padding: 0;
        }

        .header {
            border-bottom: 1px solid #898989;
            margin-bottom: 5px;
        }

    </ui:style>

    <g:DockPanel width="100%" height="100%" addStyleNames="{style.header}">
        <g:Dock direction="WEST">

            <g:HTMLPanel addStyleNames="{style.logo}">
                <h1 class="{style.title}">Annotare 2.0</h1>
                <div>
                    <a href="http://ebi.ac.uk/arrayexpress">ArrayExpress</a> experiment submission tool
                </div>
            </g:HTMLPanel>

        </g:Dock>
        <g:Dock direction='EAST' width="400px" height="100%">

            <g:HTMLPanel height="100%">

                <div style="float:right; height:100%; padding-right:5px;">
                     <g:InlineLabel  ui:field="userNameLabel" />, <g:Anchor ui:field="signOutLink" text="Sign Out"/>
                </div>
                <div style="clear:both; height:1px;"></div>

            </g:HTMLPanel>

        </g:Dock>
    </g:DockPanel>

</ui:UiBinder>

