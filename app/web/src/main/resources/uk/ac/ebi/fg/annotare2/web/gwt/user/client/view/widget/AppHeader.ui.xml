<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel height="100%" addStyleNames="app-Header">
        <table width="100%" style="height:100%;" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <h1 class="logo">Annotare 2.0</h1>
                    <div class="logotext">
                        <a href="http://www.ebi.ac.uk/arrayexpress">ArrayExpress</a> experiment submission tool
                    </div>
                </td>
                <td width="400px">
                    <div style="height:100%;">
                        <div style="float:right; height:100%; padding-right:5px;">
                            <g:InlineLabel ui:field="userNameLabel"/>,
                            <g:Anchor ui:field="signOutLink" text="Sign Out"/>
                        </div>
                        <div style="clear:both; height:1px;"></div>
                    </div>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>

