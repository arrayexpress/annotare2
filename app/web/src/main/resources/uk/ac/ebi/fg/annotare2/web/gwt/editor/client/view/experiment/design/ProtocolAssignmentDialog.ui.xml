<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .errorMessage {
            color: red;
            font-size: 12px;
        }
    </ui:style>
    <g:ResizeLayoutPanel height="300px" width="600px">
        <g:DockLayoutPanel>
            <g:center>
                <g:DockLayoutPanel>
                    <g:center>
                        <g:DockLayoutPanel>
                            <g:north size="20">
                                <g:Label>Assigned:</g:Label>
                            </g:north>
                            <g:center>
                                <g:ListBox ui:field="assignedListBox" width="100%" visibleItemCount="5"/>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:center>
                    <g:east size="250">
                        <g:DockLayoutPanel>
                            <g:west size="30">
                                <g:DockLayoutPanel>
                                    <g:north size="20">
                                        <g:SimplePanel/>
                                    </g:north>
                                    <g:north size="30">
                                        <g:Button ui:field="removeButton">&gt;</g:Button>
                                    </g:north>
                                    <g:center>
                                        <g:SimplePanel/>
                                    </g:center>
                                    <g:south size="30">
                                        <g:Button ui:field="addButton">&lt;</g:Button>
                                    </g:south>
                                </g:DockLayoutPanel>
                            </g:west>
                            <g:center>
                                <g:DockLayoutPanel>
                                    <g:north size="20">
                                        <g:Label>Available:</g:Label>
                                    </g:north>
                                    <g:center>
                                        <g:ListBox ui:field="availableListBox" width="100%" visibleItemCount="5"/>
                                    </g:center>
                                </g:DockLayoutPanel>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:east>
                </g:DockLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td><g:Label ui:field="errorMessage" addStyleNames="{style.errorMessage}"/></td>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">Save</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>