<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">


    <ui:style>
        .form {
            margin: 5px;
        }

        .form td {
            padding-bottom: 10px;
        }

        .form td.title {
            width: 140px;
            text-align: right;
            padding-right: 10px;
        }

        .buttons {
            width: 100%;
        }

        .buttons td {
            padding-bottom: 1px;
        }
    </ui:style>

    <g:ScrollPanel height="100%">
        <g:HTMLPanel>
            <table width="98%" class="{style.form}">
                <tbody>
                    <tr>
                        <td class="{style.title}">
                            Title &#42;
                        </td>
                        <td>
                            <g:TextArea width="90%" visibleLines="2" ui:field="title"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Description &#42;
                        </td>
                        <td>
                            <g:TextArea width="90%" visibleLines="4" ui:field="description"/>
                            <br/><span style="font-size:0.9em;font-style:italic;color:gray">(at least 50 characters)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            ArrayExpress Experiment Type &#42;
                        </td>
                        <td>
                            <g:ListBox width="300px" ui:field="aeExperimentType"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Experimental Designs
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        <g:ListBox width="300px" visibleItemCount="5" ui:field="experimentalDesignList"/>
                                    </td>
                                    <td valign="top">
                                        <table class="{style.buttons}" cellspacing="1">
                                            <tr>
                                                <td>
                                                    <g:Button ui:field="addExpDesignsButton">Add...</g:Button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <g:Button ui:field="removeExpDesignsButton">Remove Selected</g:Button>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Date of Experiment
                        </td>
                        <td>
                            <dp:DateBox width="200px" ui:field="dateOfExperiment"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="{style.title}">
                            Date of Public Release
                        </td>
                        <td>
                            <dp:DateBox width="200px" ui:field="dateOfPublicRelease"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>

