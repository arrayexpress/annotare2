<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:DeckLayoutPanel width="400px" height="300px" ui:field="deckPanel">
        <g:VerticalPanel width="100%" height="100%">
            <g:HTMLPanel>
                <p>Please upload files:</p>
            </g:HTMLPanel>
            <g:cell height="50px" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM">
                <g:HTMLPanel>
                    <g:Button ui:field="cancelButton">Cancel</g:Button>
                    <g:Button ui:field="nextButton">Next</g:Button>
                </g:HTMLPanel>
            </g:cell>
        </g:VerticalPanel>
        <g:VerticalPanel>
            <g:HTMLPanel ui:field="validatePanel" width="400px" height="100px">
                <p>Please validate your submission:</p>
            </g:HTMLPanel>
        </g:VerticalPanel>
        <g:VerticalPanel>
            <g:HTMLPanel ui:field="submitPanel" width="400px" height="100px">
                <p>Please submit:</p>
            </g:HTMLPanel>
        </g:VerticalPanel>
    </g:DeckLayoutPanel>

        <!--
        <g:cell width="450px" height="400px">
            <c:DataFilesUploadViewImpl width="100%" height="100%" ui:field="dataFilesUploadView"/>
        </g:cell>
        -->
</ui:UiBinder>