<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:wgt="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget">

    <g:HTMLPanel>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td valign="top">
                    <table class="app-IdfItemFormLayout">
                        <tr>
                            <td class="label">First Name</td>
                            <td style="width:250px">
                                <g:TextBox width="100%" ui:field="firstName"/>
                            </td>
                            <td class="label">Middle Initials</td>
                            <td style="width:30px">
                                <g:TextBox width="100%" ui:field="midInitials"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Last Name &#42;</td>
                            <td colspan="3">
                                <g:TextBox width="100%" ui:field="lastName"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Email</td>
                            <td colspan="3">
                                <g:TextBox width="100%" ui:field="email"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Phone</td>
                            <td colspan="3">
                                <g:TextBox width="100%" ui:field="phone"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Fax</td>
                            <td colspan="3">
                                <g:TextBox width="100%" ui:field="fax"/>
                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table class="app-IdfItemFormLayout" style="height:100%;">
                        <tr>
                            <td class="label">Affiliation</td>
                            <td>
                                <g:TextArea visibleLines="3" ui:field="affiliation"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Address</td>
                            <td>
                                <g:TextArea visibleLines="3" ui:field="address"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">Roles</td>
                            <td style="padding-bottom:0">
                                <wgt:MultiSelectList ui:field="roles"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>

