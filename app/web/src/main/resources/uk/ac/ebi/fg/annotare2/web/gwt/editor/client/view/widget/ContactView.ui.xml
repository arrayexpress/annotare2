<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

        .formLayout {
            border-collapse: collapse;
        }

        .formLayout td {
            padding-right: 10px;
            padding-left: 10px
        }

        .formLayout td.label {
            text-align: right;
            padding-right: 3px;
        }

        .formLayout input {
            padding-left: 5px;
            padding-right: 5px;
        }

        .formLayout textarea {
            width: 300px;
            padding-left: 5px;
            padding-right: 5px;
            margin: 0 auto;
        }
    </ui:style>

    <g:HTMLPanel>
        <table class="{style.formLayout}">
            <tr>
                <td class="{style.label}">First Name</td>
                <td style="width:250px">
                    <g:TextBox width="100%" ui:field="firstName"/>
                </td>
                <td class="{style.label}">Middle Initial</td>
                <td style="width:30px">
                    <g:TextBox width="100%" ui:field="midInitial"/>
                </td>
                <td rowspan="2" valign="top" align="right">
                    <table class="{style.formLayout}" style="height:100%;">
                        <tr>
                            <td class="{style.label}">Affiliation</td>
                            <td>
                                <g:TextArea visibleLines="3" ui:field="affiliation"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td class="{style.label}">Last Name</td>
                <td colspan="3">
                    <g:TextBox width="100%" ui:field="lastName"/>
                </td>
            </tr>
            <tr>
                <td colspan="4">&nbsp;</td>
                <td rowspan="4" valign="bottom" align="right">
                    <table class="{style.formLayout}" style="height:100%;">
                        <tr>
                            <td class="{style.label}">Address</td>
                            <td>
                                <g:TextArea visibleLines="3" ui:field="address"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Roles</td>
                            <td style="padding-bottom:0">
                                <g:TextArea visibleLines="2" ui:field="roles"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td class="{style.label}">Email</td>
                <td colspan="3">
                    <g:TextBox width="100%" ui:field="email"/>
                </td>
            </tr>
            <tr>
                <td class="{style.label}">Phone</td>
                <td colspan="3">
                    <g:TextBox width="100%" ui:field="phone"/>
                </td>
            </tr>
            <tr>
                <td class="{style.label}">Fax</td>
                <td colspan="3">
                    <g:TextBox width="100%" ui:field="fax"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>

