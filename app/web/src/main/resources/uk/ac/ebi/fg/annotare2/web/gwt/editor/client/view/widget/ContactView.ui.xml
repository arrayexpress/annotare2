<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .label {
            text-align: right;
            padding-right: 3px;
        }
    </ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td valign="top">
                    <table>
                        <tr>
                            <td class="{style.label}">First Name</td>
                            <td>
                                <g:TextBox/>
                            </td>
                            <td class="{style.label}">Middle Initial</td>
                            <td>
                                <g:TextBox width="30px"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Last Name</td>
                            <td colspan="3">
                                <g:TextBox width="98%"/>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Email</td>
                            <td colspan="3">
                                <g:TextBox width="98%"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Phone</td>
                            <td colspan="3">
                                <g:TextBox width="98%"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Fax</td>
                            <td colspan="3">
                                <g:TextBox width="98%"/>
                            </td>
                        </tr>
                    </table>
                </td>
                <td valign="top">
                    <table width="500px" style="margin-left:10px">
                        <tr>
                            <td class="{style.label}">Affiliation</td>
                            <td>
                                <g:TextArea width="98%" visibleLines="3"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Address</td>
                            <td>
                                <g:TextArea width="98%" visibleLines="3"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="{style.label}">Roles</td>
                            <td>
                                <g:TextArea width="98%" visibleLines="2"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

    </g:HTMLPanel>

</ui:UiBinder>

