<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <g:HTMLPanel>
        <table>
            <tr>
                <td>How many hybridisations did you perform?</td>
                <td width="200px">
                    <g:TextBox width="50px"/>
                </td>
            </tr>
            <tr>
                <td>
                    What array did you use?
                </td>
                <td>
                    <g:SuggestBox ui:field="arrayDesignList" width="100%"/>
                </td>
            </tr>
            <tr>
                <td>
                    What label did you use?
                </td>
                <td>
                    <g:TextBox width="100%"/>
                </td>
            </tr>
        </table>
        <div style="padding-top:10px;margin-top:10px;border-top:1px solid #eeeeee">
            <g:HTML ui:field="description"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>