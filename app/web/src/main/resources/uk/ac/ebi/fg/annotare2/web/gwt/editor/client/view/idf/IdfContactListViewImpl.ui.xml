<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="uk.ac.ebi.fg.annotare2.web.gwt.editor.client.resources.EditorResources"/>

    <ui:style>
        .contactListView {
            padding: 0;
        }

        .buttons {
            padding-top: 10px;
            padding-bottom: 20px;
            padding-left: 10px;
            padding-right: 10px;
        }
    </ui:style>

    <g:HTMLPanel width="100%" addStyleNames="{style.contactListView}">
        <div class="{style.buttons}">
            <g:Image resource="{res.plusIcon}" ui:field="addIcon"/>
            &nbsp;
            <g:Image resource="{res.trashIcon}" ui:field="removeIcon"/>
        </div>
        <div style="padding-left:10px;padding-right:10px">
            <g:VerticalPanel ui:field="listPanel" width="100%"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
