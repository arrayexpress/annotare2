<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:w="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget"

        >

    <ui:style>
        .editorHeader {
            padding: 10px 3px;
        }

        .editorHeader h1 {
            margin: 0;
            padding: 0;
            font-size: 23px;
            font-weight: normal;
            text-transform: uppercase;
            white-space: nowrap;
        }

        .regularButton {
            background: none repeat scroll 0 0 #888;
            border: 1px solid #888;
            color: white;
            font-size: 18px;
            font-weight: bold;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            -ms-border-radius: 3px;
            -o-border-radius: 3px;
            border-radius: 3px;
        }

        .regularButton:hover {
            background-color: #999;
            cursor: pointer;
            text-shadow: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
            border: 1px outset #999;
        }

        .validateButton {
            background: none repeat scroll 0 0 #e5a066;
            border: 1px solid #e5a066;
            color: white;
            font-size: 18px;
            font-weight: bold;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            -ms-border-radius: 3px;
            -o-border-radius: 3px;
            border-radius: 3px;
        }

        .validateButton:hover {
            background-color: #f4ae67;
            cursor: pointer;
            text-shadow: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
            border: 1px outset #f4ae67;
        }

        .submitButton {
            background: none repeat scroll 0 0 #48877c;
            border: 1px solid #48877c;
            color: white;
            font-size: 18px;
            font-weight: bold;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            -ms-border-radius: 3px;
            -o-border-radius: 3px;
            border-radius: 3px;
        }

        .submitButton:hover {
            background-color: #56958a;
            cursor: pointer;
            text-shadow: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
            border: 1px outset #62aea2;
        }

        .autoSaveLabel {
            color: #cecece;
            font-size: 14px;
            padding-left: 15px;
        }
    </ui:style>

    <g:HTMLPanel height="100%">
        <div class="{style.editorHeader}">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <h1>
                                        <g:Label ui:field="accessionLabel"/>
                                    </h1>
                                </td>
                                <td>
                                    <w:AutoSaveLabel ui:field="autoSaveLabel" addStyleNames="{style.autoSaveLabel}"/>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table style="margin-right: 0; margin-left: auto;">
                            <tr>
                                <!--
                                <td>
                                    <g:Anchor addStyleNames="{style.wiredLink}" ui:field="exportLink">Export</g:Anchor>
                                </td>
                                -->
                                <td>
                                    <g:Button addStyleNames="{style.regularButton}" ui:field="helpButton">
                                        <i class="fa fa-life-ring"/>Help
                                    </g:Button>
                                </td>
                                <td>
                                    <g:Button addStyleNames="{style.regularButton}" ui:field="feedbackButton">
                                        <i class="fa fa-comments-o"/>Feedback
                                    </g:Button>
                                </td>
                                <td>
                                    <g:Button addStyleNames="{style.validateButton}" ui:field="validateButton">
                                        <i class="fa fa-check"/>Validate
                                    </g:Button>
                                </td>
                                <td>
                                    <g:Button addStyleNames="{style.submitButton}" ui:field="submitButton">
                                        <i class="fa fa-paper-plane-o"/>Submit to ArrayExpress
                                    </g:Button>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
