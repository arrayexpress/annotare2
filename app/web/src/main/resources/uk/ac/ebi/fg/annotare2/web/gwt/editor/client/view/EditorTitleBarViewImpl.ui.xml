<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:w="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget"

        >

    <ui:style>
        .editorHeader {
            padding: 10px 3px;
        }

        .editorHeader h1 {
            margin: 0;
            padding: 0;
            font-size: 23px;
            font-weight: normal;
            text-transform: uppercase;
        }

        .validateButton {
            background: none repeat scroll 0 0 #E5A066;
            border: 1px solid #E5A066;
            color: white;
            font-size: 18px;
            font-weight: bold;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            -ms-border-radius: 3px;
            -o-border-radius: 3px;
            border-radius: 3px;
        }

        .validateButton:hover {
            background-color: #E5A066;
            cursor: pointer;
            text-shadow: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
            border: 1px outset #E5A066;
        }

        .submitButton {
            background: none repeat scroll 0 0 #48877C;
            border: 1px solid #48877C;
            color: white;
            font-size: 18px;
            font-weight: bold;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            -ms-border-radius: 3px;
            -o-border-radius: 3px;
            border-radius: 3px;
        }

        .submitButton:disabled {
            background-color: #ffffff;
            border: 1px solid #cdcdcd;
            color: #cdcdcd;
        }

            /* .globalSuccessMessage {
                position: relative;
                bottom: -1px;
                left: 0;
                background-color: #afc96c;
                padding: 2px 5px;
            }*/

        a.wiredLink {
            font-size: 20px;
            color: #cdcdcd;
            text-decoration: none;
            margin-right: 20px;
            cursor: pointer;
        }

        a.wiredLink:hover {
            color:  #48877C;
        }

        .autoSaveLabel {
            color: #cecece;
            font-size: 14px;
            padding-left: 15px;
        }
    </ui:style>

    <g:HTMLPanel height="100%">
        <div class="{style.editorHeader}">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <h1>
                                        <g:Label ui:field="accessionLabel"/>
                                    </h1>
                                </td>
                                <td>
                                    <w:AutoSaveLabel ui:field="autoSaveLabel" addStyleNames="{style.autoSaveLabel}"/>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td  style="text-align:right">
                        <g:Anchor addStyleNames="{style.wiredLink}" ui:field="createNewLink">Create New</g:Anchor>
                        <a class="{style.wiredLink}">Export</a>
                    </td>
                    <td width="200px" style="text-align:right">
                        <g:Button addStyleNames="{style.validateButton}" ui:field="validateButton">Validate</g:Button>
                        <g:Button addStyleNames="{style.submitButton}" enabled="false">Submit</g:Button>
                    </td>
                </tr>
            </table>
        </div>
        <!--div class="{style.globalSuccessMessage}">
            Validation successful.
        </div-->
    </g:HTMLPanel>
</ui:UiBinder>
