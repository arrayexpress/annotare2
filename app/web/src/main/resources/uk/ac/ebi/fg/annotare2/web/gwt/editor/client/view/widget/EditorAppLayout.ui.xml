<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .border {
            border: 1px solid black;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="60">
            <g:HTML>
                <div>Editor Header: Accession, Save Button, Validate Button, Global Messages</div>
            </g:HTML>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:south size="40">
                    <g:ScrollPanel height="100%" addStyleNames="{style.border}">
                        <g:HTML>
                            <div>Validation logs...errors, warnings etc.</div>
                        </g:HTML>
                    </g:ScrollPanel>
                </g:south>
                <g:center>
                    <g:DockLayoutPanel>
                        <g:north size="120">
                            <g:HTML>
                                <div>IDF, SDRF, ADF, DATA tabs and tab header</div>
                            </g:HTML>
                        </g:north>
                        <g:west size="60">
                            <g:ScrollPanel height="100%" addStyleNames="{style.border}">
                                <g:HTML>
                                    <div>IDF left menu</div>
                                </g:HTML>
                            </g:ScrollPanel>
                        </g:west>
                        <g:center>
                            <g:ScrollPanel height="100%" addStyleNames="{style.border}">
                                <g:HTML>
                                    <div>Content Area</div>
                                </g:HTML>
                            </g:ScrollPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>

