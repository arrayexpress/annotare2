<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:w="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.experiment.setup"
        >

    <ui:style>
        .centerView {
            margin-left: auto;
            margin-right: auto;
            border: 1px solid #eeeeee;
            background-color: white;

            -webkit-border-radius: 3px 3px 0 0;
            -moz-border-radius: 3px 3px 0 0;
            -ms-border-radius: 3px 3px 0 0;
            -o-border-radius: 3px 3px 0 0;
            border-radius: 3px;

            -moz-box-shadow: 3px 3px 4px #cdcdcd;
            -webkit-box-shadow: 3px 3px 4px #cdcdcd; /*#F3F7FB;*/
            box-shadow: 3px 3px 4px #cdcdcd;
        }

        .centerView td {
            padding: 10px;
        }

        .square {
            text-align: center;
            vertical-align: middle;
            background-color: white;
            padding: 25px;
        }

        .background {
            background-color: white;
        }

        .title {
            font-size: 24px;
            color: #207A7A;
        }
    </ui:style>

    <g:ScrollPanel>
        <g:HTMLPanel addStyleNames="{style.background}">
            <div class="{style.square}">
                <span class="{style.title}">New Experiment Submission</span>
            </div>
            <table class="{style.centerView}">
                <tr>
                    <td>
                        <w:SetupExpSubmissionView ui:field="view" height="500px" width="800px"/>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>