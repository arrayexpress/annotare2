<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .square {
            margin-top: 1%;
            border-bottom: 1px solid #eeeeee;
            text-align:center;
            vertical-align: middle;
        }

        a.bigLink, a.bigLink:link {
            font-size: 30px;
            color: #eeeeee;
            text-decoration: none;
        }

        a.bigLink:hover {
            color: black
        }
    </ui:style>

    <g:SimpleLayoutPanel>
        <g:HTMLPanel>
            <div class="{style.square}">
                <g:Anchor ui:field="setupSubmission" addStyleNames="{style.bigLink}">Experiment Submission</g:Anchor>
            </div>
        </g:HTMLPanel>
    </g:SimpleLayoutPanel>
</ui:UiBinder>