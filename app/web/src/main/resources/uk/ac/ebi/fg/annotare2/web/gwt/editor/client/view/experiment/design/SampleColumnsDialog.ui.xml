<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .newAttribute {
            cursor: pointer;
            text-decoration: underline;
            text-transform: lowercase;
            padding: 3px;
        }
        .newAttribute:hover {
            background-color: #eeeeee;
        }
        .errorMessage {
            color: red;
            font-size: 12px;
        }
    </ui:style>
    <g:ResizeLayoutPanel height="600px" width="700px">
        <g:DockLayoutPanel>
            <g:center>
                <g:DockLayoutPanel>
                    <g:east size="300">
                        <g:DockLayoutPanel>
                            <g:center>
                                <g:ListBox ui:field="templateColumnList" visibleItemCount="9" width="100%"/>
                            </g:center>
                            <g:south size="25">
                                <g:Label addStyleNames="{style.newAttribute}" ui:field="newColumnLabel">New Attribute</g:Label>
                            </g:south>
                        </g:DockLayoutPanel>
                    </g:east>
                    <g:center>
                        <g:SplitLayoutPanel>
                            <g:center>
                                <g:DockLayoutPanel>
                                    <g:east size="40">
                                        <g:SimpleLayoutPanel>
                                            <g:HTMLPanel>
                                                <table style="width:100%" cellspacing="1">
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="addButton">&lt;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="removeButton">
                                                                &gt;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="moveUpButton">
                                                                &#8593;</g:Button>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <g:Button width="100%" ui:field="moveDownButton">
                                                                &#8595;</g:Button>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </g:HTMLPanel>
                                        </g:SimpleLayoutPanel>
                                    </g:east>
                                    <g:center>
                                        <g:ListBox ui:field="columnList" width="100%" visibleItemCount="9"/>
                                    </g:center>
                                </g:DockLayoutPanel>
                            </g:center>
                            <g:south size="200">
                                <g:SimpleLayoutPanel ui:field="columnEditor"/>
                            </g:south>
                        </g:SplitLayoutPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%;height:100%">
                        <tr>
                            <td>
                                <g:Label ui:field="errorMessage" addStyleNames="{style.errorMessage}"/>
                            </td>
                            <td align="right" valign="bottom">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">OK</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>