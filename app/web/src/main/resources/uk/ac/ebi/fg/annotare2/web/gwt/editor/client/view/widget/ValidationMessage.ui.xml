<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .messageLabel {
            color: #D8000C;
        }
        .closeLink {
           color: #888;
           cursor: pointer;
        }
        .closeLink:hover {
            color: #000;
        }
    </ui:style>
    <g:HTMLPanel ui:field="panel">
        <table cellspacing="5" cellpadding="0" style="background-color:#FFBABA;">
            <tr>
                <td valign="top">
                    <g:Label ui:field="messageLabel" addStyleNames="{style.messageLabel}"/>
                </td>
                <td valign="top">
                    <g:Anchor ui:field="closeLink" addStyleNames="{style.closeLink}">hide</g:Anchor>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>