<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .annotare {
            padding-left: 3px;
            background-color: #f3f7fb;
        }

        a.logo, a.logo:hover, a.logo:active, a.logo:link {
            color: #207A7A;
            font-size: 18px;
            font-weight: normal;
            margin: 0;
            padding: 0 5px 0 0;
            text-decoration: none;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.annotare}">
        <table width="100%" cellspacing="0" cellpadding="0">
            <tr>
                <td>
                    <a class="{style.logo}" href="../../">Annotare 2.0</a>
                    <!--
                    <a class="{style.annotareLink}" href="#">Contact Us</a>
                    <a class="{style.annotareLink}" href="http://www.ebi.ac.uk/fgpt/annotare_help/" target="_blank">Help</a>
                     -->
                </td>
                <td style="text-align: right; padding-right:5px">
                    <g:InlineLabel ui:field="userNameLabel"/>
                    &#160;
                    <g:Anchor ui:field="signOutLink">Sign Out</g:Anchor>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>