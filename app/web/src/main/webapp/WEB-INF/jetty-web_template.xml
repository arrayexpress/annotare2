<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure id="webAppCtx" class="org.mortbay.jetty.webapp.WebAppContext">

    <% if (annotareProperties != null) { %>
    <New id="annotareProperties" class="org.mortbay.jetty.plus.naming.EnvEntry">
        <Arg>java:comp/env/annotareProperties</Arg>
        <Arg type="java.lang.String">/path/to/annotare/properties</Arg>
        <Arg type="boolean">true</Arg>
    </New>
    <% } %>

    <% if (mageTabCheckProperties != null) { %>
    <New id="mageTabCheckProperties" class="org.mortbay.jetty.plus.naming.EnvEntry">
        <Arg>java:comp/env/mageTabCheckProperties</Arg>
        <Arg type="java.lang.String">/path/to/magetabcheck/properties</Arg>
        <Arg type="boolean">true</Arg>
    </New>
    <% } %>

    <New id="annotareDataSource" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg>java:comp/env/jdbc/annotareDataSource</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
                <Set name="Url">${dbUrl}</Set>
                <Set name="User">${dbUser}</Set>
                <Set name="Password">${dbPassword}</Set>
            </New>
        </Arg>
    </New>

    <% if (st_dbUrl != null) { %>
    <New id="subsTrackingDataSource" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg>java:comp/env/jdbc/subsTrackingDataSource</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
                <Set name="Url">${st_dbUrl}</Set>
                <Set name="User">${st_dbUser}</Set>
                <Set name="Password">${st_dbPassword}</Set>
            </New>
        </Arg>
    </New>
    <% } %>

    <Set name="initParams">
        <Map>
            <Entry>
                <Item>org.mortbay.jetty.servlet.SessionURL</Item>
                <Item>none</Item>
            </Entry>
        </Map>
    </Set>
</Configure>