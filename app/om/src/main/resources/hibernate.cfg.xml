<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd" >
<hibernate-configuration>
    <session-factory>

        <!-- Database connection settings -->
        <!--
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/mydatabase</property>
        <property name="connection.username">username</property>
        <property name="connection.password">password</property>
        -->
        <property name="connection.datasource">java:comp/env/jdbc/annotareDataSource</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <property name="connection.autocommit">false</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <property name="current_session_context_class">thread</property>
        <property name="transaction.factory_class">org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory</property>

        <mapping class="uk.ac.ebi.fg.annotare2.db.om.User" />
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.UserRole" />
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.Acl" />
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.AclEntry" />
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.Submission" />
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.ExperimentSubmission"/>
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.ArrayDesignSubmission"/>
        <mapping class="uk.ac.ebi.fg.annotare2.db.om.DataFile" />
    </session-factory>
</hibernate-configuration>


