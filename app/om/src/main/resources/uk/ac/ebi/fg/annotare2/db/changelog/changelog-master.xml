<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="olkin">
        <sqlFile path="schema-1.0.sql" relativeToChangelogFile="true"/>
    </changeSet>
    <changeSet id="2" author="olkin">
        <sqlFile path="bootstrap-1.0.sql" relativeToChangelogFile="true"/>
    </changeSet>
    <changeSet id="3" author="kolais">
        <addColumn tableName="submissions">
            <column name="subsTrackingId" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="kolais">

        <addColumn tableName="submissions">
            <column name="ownedBy" type="BIGINT"/>
        </addColumn>
        <sql>
            UPDATE submissions SET ownedBy = createdBy;
            ALTER TABLE submissions MODIFY ownedBy BIGINT NOT NULL;
            ALTER TABLE submissions ADD CONSTRAINT FOREIGN KEY (ownedBy) REFERENCES users (id) ON DELETE CASCADE;
        </sql>
    </changeSet>
</databaseChangeLog>
