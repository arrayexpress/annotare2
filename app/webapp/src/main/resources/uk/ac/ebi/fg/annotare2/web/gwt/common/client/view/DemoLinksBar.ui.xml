<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .bar {
            background-color: #e5a066; /* light highlight */
            border-bottom: 1px solid #f0d9a7;
            padding: 6px 8px;
            font-size: 12px;
            text-align: right;
            line-height: 1.6;
            height: 16px;
            position: relative; /* create local stacking context only */
            /* z-index intentionally omitted: scoped per view where necessary */
            white-space: nowrap; /* keep icon, label, and link on one line */
        }
        .demo-links-sep {
            color: #888;
            padding: 0 6px;
        }
        .demo-links-icon {
            color: #4a2c00; /* match label color */
            font-weight: bold;
            margin-right: 4px;
        }
        .demo-links-label {
            color: #4a2c00; /* darker for contrast on orange */
            font-weight: bold;
        }
        .demo-links-anchor {
            color: #ffffff;
            text-decoration: none;
        }
        .demo-links-anchor:hover {
            text-decoration: underline;
        }
    </ui:style>

    <g:FlowPanel ui:field="container" addStyleNames="{style.bar}"></g:FlowPanel>
</ui:UiBinder>
