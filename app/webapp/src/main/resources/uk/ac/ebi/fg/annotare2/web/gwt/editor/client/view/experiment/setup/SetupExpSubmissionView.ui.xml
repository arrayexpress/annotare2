        .tooltip {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .tooltip .tooltiptext {
            visibility: hidden;
            width: 275px;
            word-wrap: normal;
            background-color: #888;
            color: #fff;
            text-align: justify;
            border-radius: 6px;
            padding: 2px 5px;

            /* Position the tooltip */
            position: absolute;
            z-index: 1;
        }

        .tooltip:hover .tooltiptext {
            visibility: visible;
        }

        .expDescription {
            padding-top: 10px;
            margin-top: 10px;
            border-top: 1px solid #eeeeee;
            color: #777;
        }

        .front-end {
            content: '\f121';
        }



        .radio-inline label{
            display: inline-block;
            width: 100pt;
            height: 100pt;
            border: 1px solid;
            vertical-align: middle;
            margin: 10pt;
            border-color: #207a79;
            background-color: transparent;
            text-align: center;
            font-size: 15px;
        }

        .radio-inline label:before{
            background-color: transparent;
        }

        .radio-inline input[type=radio]:checked + label {
            background-color: #207a79;
            color: #ffffff;
        }


        .hts label:before {
            content:url(/assets/images/annotare-logo-64.svg);
            display:block;
            margin:5%;
        }


        .oneColor label:before {
            content:url(/assets/images/annotare-logo-64.svg);
            display:block;
            margin:5%;
        }


        .twoColor label:before {
            content:url(/assets/images/annotare-logo-64.svg);
            display:block;
            margin:5%;
        }


        .singleCell label:before {
            content:url(/assets/images/cell.svg);
            display:block;
            margin:5%;
        }

        .human label:before {
            content: 'H';
            font-family: 'EBI-Species';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .vertebrate label:before {
            content: 's';
            font-family: 'EBI-Species';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .cellLine label:before {
            content:url(/assets/images/cellline.svg);
            display: block;
            margin: 5%;
        }


        .plant label:before {
            content: 'P';
            font-family: 'EBI-Species';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .other label:before {
            content: '?';
            font-family: 'EBI-Generic';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .radio-inline input  {
            display: none;
        }
        .radio-inline i {

        }

        .materialType input:checked + label:before {
            opacity: 0.5;
        }

    </ui:style>

