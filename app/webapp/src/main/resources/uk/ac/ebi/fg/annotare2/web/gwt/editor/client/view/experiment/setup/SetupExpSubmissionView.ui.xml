<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
    <ui:style>
        .border {
            border-bottom: 1px solid #eeeeee;
        }

        .templateDetails {
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 10pt;
            line-height: 160%;
        }

        .title {
            font-size: 18px;
            color: #207A7A;
            margin-right: 10px;
        }

        .expDesignPanel {
            border-style: solid !important;
            border-width: 1px;
            margin: 10px;
            border-color: #207a7a;
            width:250px;
        }

        .title-lef-nav {
            font-size: 16px;
            color: #207A7A;
            margin-top: 5px;
        }

        .titleMargin {
            margin-left: 2px;
        }

        .padded {
            margin: 12pt;
        }

        .top-padded {
            margin-top: 16pt;
        }

        .help {
            color: #b36363;
            margin-top: 5px;
            width: 500px;
            padding-left: 30px
        }

        .question {
            color: #207A7A;
            font-size: 12pt;
            margin-right: 10px;
        }
        .middle {
            vertical-align: middle;
        }

    </ui:style>
    <g:ResizeLayoutPanel>
        <g:DockLayoutPanel addStyleNames="{style.padded}">
            <g:center>
                <g:VerticalPanel>
                    <g:HorizontalPanel >
                        <g:cell verticalAlignment="ALIGN_MIDDLE">
                            <g:Label addStyleNames="{style.question}">Select Submission Type </g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="ALIGN_MIDDLE">
                        <g:ListBox
                                title="Select the technology type carefully because we rely on this to present you with relevant questions to complete this submission"
                                ui:field="templateBox" visibleItemCount="1" width="100%" height="100%"/>
                        </g:cell>
                        <g:HTMLPanel addStyleNames="{style.help}">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>Take your time to answer this question as you wonâ€™t be able to change it back. If you change your
                            mind you will need to start another submission from the beginning.
                        </g:HTMLPanel>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel addStyleNames="{style.top-padded}">
                        <g:VerticalPanel>
                            <g:Label addStyleNames="{style.question}">Select Experiment Design(s)</g:Label>
                            <g:ScrollPanel ui:field="experimentDesignPanel"
                                           addStyleNames="{style.expDesignPanel}"/>
                        </g:VerticalPanel>
                        <g:VerticalPanel width="600">
                            <g:Label addStyleNames="{style.question}">Provide Experiment Details</g:Label>
                            <g:ScrollPanel ui:field="templateDetails"
                                           addStyleNames="{style.templateDetails}"/>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">OK</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>