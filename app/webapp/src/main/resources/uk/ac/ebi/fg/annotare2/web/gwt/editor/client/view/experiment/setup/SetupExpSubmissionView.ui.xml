<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
    <ui:style>
        .border {
            border-bottom: 1px solid #eeeeee;
        }

        .templateDetails {
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 15px;
            line-height: 160%;
        }

        .title{
            font-size: 18px;
            color: #207A7A;
        }

        .expDesignPanel{
            border-style: solid !important;
            border-width: 1px;
            margin: 10px;
            width: 96% !important;
            border-color: #207a7a;
        }

        .title-lef-nav
        {
            font-size: 16px;
            color: #207A7A;
            margin-top: 5px;
        }

        .titleMargin{
            margin-left: 10px;
        }

    </ui:style>
    <g:ResizeLayoutPanel height="300px" width="700px">
        <g:DockLayoutPanel>
            <g:north size="100">
                <g:DockLayoutPanel>
                    <g:north size="50">
                        <g:HorizontalPanel>
                            <g:Label addStyleNames="{style.title}"> Please, Select the Submission Type </g:Label>
                            <g:ListBox title="Select the technology type carefully because we rely on this to present you with relevant questions to complete this submission" ui:field="templateBox" visibleItemCount="1" width="100%" height="100%"/>
                        </g:HorizontalPanel>
                    </g:north>
                    <g:south size="50">
                        <g:VerticalPanel>
                        <g:Label>
                            Take your time to ask this question as you won’t be able to change it back. If you change your mind you will need to start another submission from the beginning
                        </g:Label>
                        </g:VerticalPanel>
                    </g:south>
                </g:DockLayoutPanel>
            </g:north>
            <g:center>
                <g:DockLayoutPanel>
                    <g:north size="35">
                        <g:VerticalPanel>
                        <g:Label>Please Select Experiment Design(s):</g:Label>
                        </g:VerticalPanel>
                    </g:north>
                    <g:north size="250">
                        <g:ScrollPanel width="100%" ui:field="experimentDesignPanel" addStyleNames="{style.expDesignPanel}"></g:ScrollPanel>
                    </g:north>
                    <g:center>
                        <g:ScrollPanel height="100%" ui:field="templateDetails" addStyleNames="{style.templateDetails}"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">OK</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>