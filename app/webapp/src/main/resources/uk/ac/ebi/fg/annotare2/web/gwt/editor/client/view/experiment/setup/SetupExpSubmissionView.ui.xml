<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
    <ui:style>
        .templateDetails {
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 10pt;
            line-height: 160%;
        }

        .expDesignPanel {
            border-style: solid !important;
            border-width: 1px;
            margin: 10px;
            border-color: #207a7a;
            width: 250px;
        }

        .centerAlignTechType{
            margin: auto;
            width: 80%;
        }

        .centerAlignMaterialType{
            margin: auto;
            width: 96%;
        }

        .padded {
            margin: 12pt;
        }

        .top-padded {
            margin-top: 16pt;
        }

        .help {
            color: #b36363;
            margin-top: 5px;
            width: 500px;
        }

        .question {
            color: #207A7A;
            font-size: 12pt;
            margin-right: 10px;
        }

        .plantImage {
            display: inline-block;
            vertical-align: top;
            height: 100%;
            margin-left: 100px;
            margin-top: 50px;
        }

        .plantImageTextOneClr {
            display: inline-block;
            vertical-align: middle;
            margin-top: -34%;
            margin-left: 61%;
            color: #93ce59;
        }

        .plantImageTextTwoClr {
            display: inline-block;
            vertical-align: middle;
            margin-top: -16%;
            margin-left: 65%;
            color: #93ce59;
        }

        .plantImageTextSeq {
            display: inline-block;
            vertical-align: middle;
            margin-top: -28%;
            margin-left: 71%;
            color: #93ce59;
        }

        .tooltip {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .tooltip .tooltiptext {
            visibility: hidden;
            width: 275px;
            word-wrap: normal;
            background-color: #888;
            color: #fff;
            text-align: justify;
            border-radius: 6px;
            padding: 2px 5px;

            /* Position the tooltip */
            position: absolute;
            z-index: 1;
        }

        .tooltip:hover .tooltiptext {
            visibility: visible;
        }

        .expDescription {
            padding-top: 10px;
            margin-top: 10px;
            border-top: 1px solid #eeeeee;
            color: #777;
        }

        .front-end {
            content: '\f121';
        }



        .radio-inline label{
            display: inline-block;
            width: 100pt;
            height: 100pt;
            border: 1px solid;
            vertical-align: middle;
            margin: 10pt;
            border-color: #207a79;
            background-color: transparent;
            text-align: center;
            font-size: 15px;
        }

        .radio-inline label:before{
            background-color: transparent;
            padding-top: 3pt;
        }

        .radio-inline input[type=radio]:checked + label {
            background-color: #207a79;
            color: #ffffff;
        }

        .hts input[type="radio"]:checked+label:before {
            content:url(../../assets/images/hts-white.svg);
        }
        .hts label:before {
            content:url(../../assets/images/hts.svg);
            display:block;
            margin:5%;
        }

        .oneColor input[type="radio"]:checked+label:before {
            content:url(../../assets/images/onecolor-white.svg);
        }
        .oneColor label:before {
            content:url(../../assets/images/onecolor.svg);
            display:block;
            margin:5%;
        }


        .twoColor input[type="radio"]:checked+label:before {
            content:url(../../assets/images/twocolor-white.svg);
        }
        .twoColor label:before {
            content:url(../../assets/images/twocolor.svg);
            display:block;
            margin:5%;
        }

        .singleCell input[type="radio"]:checked+label:before {
            content:url(../../assets/images/cell-white.svg);
        }
        .singleCell label:before {
            content:url(../../assets/images/cell.svg);
            display:block;
            margin:5%;
        }

        .human label:before {
            content: 'H';
            font-family: 'EBI-Species';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .animal input[type="radio"]:checked+label:before {
            content:url(../../assets/images/animal-white.svg);
        }
        .animal label:before {
            content:url(../../assets/images/animal.svg);
            display:block;
            margin:5%;
        }



        .cellLine input[type="radio"]:checked+label:before {
            content:url(../../assets/images/cellline-white.svg);
        }
        .cellLine label:before {
            content:url(../../assets/images/cellline.svg);
            display: block;
            margin: 5%;
        }


        .plant label:before {
            content: 'P';
            font-family: 'EBI-Species';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .other label:before {
            content: '?';
            font-family: 'EBI-Generic';
            display: block;
            font-size: 44pt;
            margin: 5%;
        }

        .radio-inline input  {
            display: none;
        }
        .radio-inline label {
            cursor:pointer;
        }

        .materialType input:checked + label:before {
            color: white;
        }

        .materialType input + label:before {
            color: #aaa;
            padding-top: 8pt;
        }

    </ui:style>

    <g:ResizeLayoutPanel>
        <g:DockLayoutPanel addStyleNames="{style.padded}">
            <g:center>
                <g:VerticalPanel width="100%">
                    <g:HTMLPanel ui:field="techTypePanel" addStyleNames="{style.centerAlignTechType}">
                        <link rel="stylesheet" href="//ebi.emblstatic.net/web_guidelines/EBI-Icon-fonts/v1.2/fonts.css"/>
                        <div>
                            <p style="font-size: 16px;">Tech Type:</p>
                        </div>
                        <g:RadioGroup ui:field="techType">
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.hts}" name="techType" text="High-Throughput Sequencing" value="true"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.oneColor}" name="techType" text="One-color Microarray" value="false"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.twoColor}" name="techType" text="Two-color Microarray" value="false"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.singleCell}" name="techType" text="Single-cell Sequencing" value="false"/>
                        </g:RadioGroup>
                    </g:HTMLPanel>
                    <g:HTMLPanel ui:field="materialTypePanel" addStyleNames="{style.centerAlignMaterialType}">
                        <link rel="stylesheet" href="//ebi.emblstatic.net/web_guidelines/EBI-Icon-fonts/v1.2/fonts.css"/>
                        <div>
                            <p style="font-size: 16px;">Material Type:</p>
                        </div>
                        <g:RadioGroup ui:field="materialType" addStyleNames="{style.materialType}">
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.human}" name="materialType" text="Human" value="true"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.animal}" name="materialType" text="Animal" value="false"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.cellLine}" name="materialType" text="Cell Line" value="false"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.plant}" name="materialType" text="Plant" value="false"/>
                            <g:RadioButton addStyleNames="{style.radio-inline},{style.other}" name="materialType" text="Other" value="false"/>
                        </g:RadioGroup>
                    </g:HTMLPanel>

                    <g:HTMLPanel>
                        <!--g:Label ui:field="humanType">
                            <input type="radio" name="materialType" value="Human"/>
                        </g:Label>
                        <g:Label ui:field="AnimalType">
                            <input type="radio" name="materialType" value="Animal"/>
                        </g:Label>
                        <g:Label ui:field="plantType">
                            <input type="radio" name="materialType" value="Plant"/>
                        </g:Label>
                        <g:Label ui:field="cellLineType">
                            <input type="radio" name="materialType" value="Cell Line"/>
                        </g:Label>
                        <g:Label ui:field="otherType">
                            <input type="radio" name="materialType" value="Other"/>
                        </g:Label-->
                    </g:HTMLPanel>
                    <g:HorizontalPanel addStyleNames="{style.top-padded}">
                        <g:VerticalPanel>
                            <g:HorizontalPanel>
                                <g:Label addStyleNames="{style.question}" ui:field="experimentDesignPanelLabel">Select
                                    Experiment Design(s)
                                </g:Label>
                                <g:HTMLPanel ui:field="expDesignInfo">
                                    <div class="{style.tooltip}">
                                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                                        <span class="{style.tooltiptext}">
                                            (Optional) Choose the designs types that best describe your experiment to
                                            pre-select the experimental variable(s) for your experiment. This can be
                                            changed later.
                                        </span>
                                    </div>
                                </g:HTMLPanel>
                            </g:HorizontalPanel>
                            <g:ScrollPanel ui:field="experimentDesignPanel" addStyleNames="{style.expDesignPanel}"/>
                        </g:VerticalPanel>
                        <g:VerticalPanel width="600" height="500">
                            <g:Label addStyleNames="{style.question}" ui:field="templateDetailsLabel">&nbsp;&nbsp;&nbsp;Provide
                                Experiment Details
                            </g:Label>
                            <g:SimplePanel ui:field="templateDetails" addStyleNames="{style.templateDetails}"/>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:center>
            <g:south size="50">
                <g:HTMLPanel>
                    <table style="width:100%">
                        <tr>
                            <td align="left">
                                <g:Button ui:field="prevButton">Prev</g:Button>
                            </td>
                            <td align="right">
                                <g:Button ui:field="cancelButton">Cancel</g:Button>
                                <g:Button ui:field="okButton">OK</g:Button>
                                <g:Button ui:field="nextButton">Next</g:Button>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:ResizeLayoutPanel>
</ui:UiBinder>