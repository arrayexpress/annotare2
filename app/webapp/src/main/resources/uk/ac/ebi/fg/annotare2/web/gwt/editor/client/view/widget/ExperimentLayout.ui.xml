<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:my="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.editor.client.view.widget"
        xmlns:c="urn:import:uk.ac.ebi.fg.annotare2.web.gwt.common.client.view">

    <ui:style>
        .showHideButton {
            height: 27px;
            font-size: 12pt;
            border: 0;
            background: #e7e7e7;
            color: #48877c;
            cursor: pointer;
            outline: none;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="25">
                <g:SimpleLayoutPanel ui:field="topBarDisplay" height="100%"/>
        </g:north>
        <g:north size="60">
            <g:SimpleLayoutPanel ui:field="titleBarDisplay"/>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel">
                <g:center>
                    <g:DockLayoutPanel ui:field="dockLayoutPanel">
                        <g:north size="40">
                            <g:SimpleLayoutPanel ui:field="tabBarDisplay" height="100%"/>
                        </g:north>
                        <g:west size="0">
                            <my:MinimizableScrollPanel size="200" height="100%" ui:field="leftMenuDisplay"/>
                        </g:west>
                        <g:center>
                            <g:SplitLayoutPanel ui:field="fileUploadPanel">
                                <g:center size="580">
                                    <g:DockLayoutPanel>
                                        <g:center>
                                            <g:SimpleLayoutPanel height="100%" ui:field="contentDisplay"/>
                                        </g:center>
                                        <g:east size="20">
                                            <g:SimpleLayoutPanel ui:field="simpleToggleButtonPanel">
                                                <g:Button styleName="{style.showHideButton}" ui:field="showHideButton"><i class="fa fa-arrow-circle-down"/></g:Button>
                                            </g:SimpleLayoutPanel>
                                        </g:east>
                                    </g:DockLayoutPanel>
                                </g:center>
                                <g:east size="520">
                                    <g:SimpleLayoutPanel ui:field="fileUploadDisplay"/>
                                </g:east>
                            </g:SplitLayoutPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
                <g:south size="40">
                    <g:ScrollPanel ui:field="logBarDisplay" height="100%"/>
                </g:south>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>