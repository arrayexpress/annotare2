<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:DockLayoutPanel>
        <g:north size="625">
            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:Label width="200px">How many RNA-seq libraries did you perform?</g:Label>
                    <g:TextBox ui:field="numberOfSamples" width="150px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label width="200px">Are you libraries strand-specific?</g:Label>
                    <g:ListBox ui:field="strandLibraries" width="250px" visibleItemCount="1"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label width="200px">Does you experiment involve single-end or paired-end sequencing?</g:Label>
                    <g:ListBox ui:field="libraryLayout" width="250px" visibleItemCount="1"/>
                </g:HorizontalPanel>
                <g:Label width="200px">We need some more details.....</g:Label>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:Label>Library Source</g:Label>
                        <g:ListBox ui:field="librarySource" width="150px" visibleItemCount="1"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:Label>Library Strategy</g:Label>
                        <g:ListBox ui:field="libraryStrategy" width="150px" visibleItemCount="1"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:Label>Library Selection</g:Label>
                        <g:ListBox ui:field="librarySelection" width="150px" visibleItemCount="1"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:Label ui:field="nominalLengthLabel">Nominal Length</g:Label>
                        <g:TextBox ui:field="nominalLength" width="150px"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:Label ui:field="nominalSDevLabel">Nominal SDev</g:Label>
                        <g:TextBox ui:field="nominalSDev" width="150px"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:Label ui:field="orientationLabel">Orientation</g:Label>
                        <g:ListBox ui:field="orientation" width="150px" visibleItemCount="1"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>
    </g:DockLayoutPanel>
