<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="uk.ac.ebi.fg.annotare2.web.gwt.editor.client.resources.EditorResources"/>

    <ui:style>
        .disclosureHeader {
            border-top: 1px solid #fff;
            background-color: #eee;
        }
    </ui:style>

    <g:HTMLPanel width="100%">
        <table width="100%" class="{style.disclosureHeader}">
            <tr>
                <td width="20px" class="{res.editorStyles.expandIconClass}" ui:field="expandCollapseIcon"></td>
                <td>
                    <g:Label ui:field="label" text=""/>
                </td>
                <td></td>
                <td width="20px"><g:CheckBox ui:field="checkbox"/></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
